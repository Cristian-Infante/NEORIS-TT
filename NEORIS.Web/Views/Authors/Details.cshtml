@model NEORIS.Web.Models.AuthorViewModel
@{
    ViewBag.Title = "Detalle del Autor";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="mb-4 page-header">
            <h2 class="mb-0">Detalle del Autor</h2>
        </div>

        <div class="form-card">
            <div class="row mb-3">
                <div class="col-5 text-muted fw-semibold">Nombre Completo</div>
                <div class="col-7 fw-bold fs-5">@Model.FullName</div>
            </div>
            <hr class="my-2">
            <div class="row mb-3">
                <div class="col-5 text-muted fw-semibold">Fecha de Nacimiento</div>
                <div class="col-7">@Model.BirthDate.ToString("dd/MM/yyyy")</div>
            </div>
            <hr class="my-2">
            <div class="row mb-3">
                <div class="col-5 text-muted fw-semibold">Ciudad de Origen</div>
                <div class="col-7">@Model.OriginCity</div>
            </div>
            <hr class="my-2">
            <div class="row mb-4">
                <div class="col-5 text-muted fw-semibold">Correo Electronico</div>
                <div class="col-7"><a href="mailto:@Model.Email">@Model.Email</a></div>
            </div>

            <div class="d-flex gap-2">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Volver al listado</a>
            </div>
        </div>
    </div>
</div>
