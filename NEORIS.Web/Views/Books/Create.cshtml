@model NEORIS.Web.Models.CreateBookViewModel
@{
    ViewBag.Title = "Nuevo Libro";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="mb-4 page-header">
            <h2 class="mb-0">Nuevo Libro</h2>
        </div>

        @if (Html.ValidationSummary(false) != null)
        {
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        }

        <div class="form-card">
            <p class="text-muted small mb-4"><span class="required-star">*</span> Campos obligatorios</p>

            @using (Html.BeginForm("Create", "Books", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        Titulo<span class="required-star">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Ej: Cien Anos de Soledad", required = "required" })
                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger small" })
                </div>

                <div class="row mb-3">
                    <div class="col-6">
                        <label class="form-label fw-semibold">
                            Ano de Publicacion<span class="required-star">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.Year, new { @class = "form-control", type = "number", min = "1000", max = "2100", placeholder = "Ej: 1967", required = "required" })
                        @Html.ValidationMessageFor(m => m.Year, "", new { @class = "text-danger small" })
                    </div>
                    <div class="col-6">
                        <label class="form-label fw-semibold">
                            Numero de Paginas<span class="required-star">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.PageCount, new { @class = "form-control", type = "number", min = "1", max = "99999", placeholder = "Ej: 432", required = "required" })
                        @Html.ValidationMessageFor(m => m.PageCount, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        Genero<span class="required-star">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.Genre, new { @class = "form-control", placeholder = "Ej: Realismo Magico", required = "required" })
                    @Html.ValidationMessageFor(m => m.Genre, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">
                        Autor<span class="required-star">*</span>
                    </label>
                    @Html.DropDownListFor(m => m.AuthorId, Model.Authors ?? Enumerable.Empty<SelectListItem>(), "-- Seleccione un autor --", new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.AuthorId, "", new { @class = "text-danger small" })
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">Crear Libro</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>
